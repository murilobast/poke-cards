body, html
	margin 0
	padding 0
	font-family 'Ubuntu', 'Helvetica'
	text-align center
	
.booster
	font-size 0
	max-width 1200px
	margin auto
	&__pack
		width 20%
		display inline-block
		box-sizing border-box
		vertical-align top
	&__cards
		max-width 80%
		display inline-block
		box-sizing border-box
		vertical-align top
	&__card
		width 20%
		display inline-block
		box-sizing border-box
		vertical-align top
		font-size 12px
		padding 0 6px
		img
			width 100%
	&__group
		margin-top 30px